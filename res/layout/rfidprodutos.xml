<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button
         android:id="@+id/btn_inventario"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Iniciar inventario"
         android:onClick="chamaInventario"
         android:visibility="gone" />
    
    <ProgressBar
        android:id="@+id/progressBarProdutos"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp" />
    
    <TextView android:id="@+id/tvImportando"
        	  android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_alignParentTop="true"
	          android:layout_centerInParent="true"
	          android:layout_marginTop="180dp"
	          android:text="@string/importando" />
        
     <ListView
        android:id="@+id/lvRFIDProdutos"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/btn_inventario" >        
    	</ListView>
    
</RelativeLayout>
